# Определение класса Point
class Point:
    # Конструктор класса, который принимает координаты x и y и инициализирует объект
    def __init__(self, x, y):
        self.x = x
        self.y = y

# Создание экземпляра класса Point с координатами (3, 4)
my_point = Point(3, 4)

# Вывод координат x и y экземпляра
print("Координата x:", my_point.x)
print("Координата y:", my_point.y)
